{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "m010 KPI output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "mechanism_id",
    "scope",
    "as_of",
    "signals_emitted",
    "subjects_touched",
    "evidence_coverage_rate",
    "median_event_latency_hours"
  ],
  "properties": {
    "mechanism_id": {
      "const": "m010"
    },
    "scope": {
      "type": "string"
    },
    "as_of": {
      "type": "string",
      "description": "ISO-8601 datetime with timezone (e.g., 2026-02-04T12:00:00Z)",
      "format": "date-time"
    },
    "signals_emitted": {
      "type": "integer",
      "minimum": 0
    },
    "subjects_touched": {
      "type": "integer",
      "minimum": 0
    },
    "evidence_coverage_rate": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "median_event_latency_hours": {
      "type": [
        "number",
        "null"
      ],
      "minimum": 0.0
    },
    "sources_checked": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "koi",
        "ledger",
        "web"
      ],
      "properties": {
        "koi": {
          "type": "boolean"
        },
        "ledger": {
          "type": "boolean"
        },
        "web": {
          "type": "boolean"
        }
      }
    },
    "challenge_kpis": {
      "type": "object",
      "description": "Challenge workflow metrics (section 6.7 of SPEC.md). Optional in v0; required when challenge workflow is active.",
      "additionalProperties": false,
      "properties": {
        "challenges_filed": {
          "type": "integer",
          "minimum": 0,
          "description": "Total challenges filed in this period"
        },
        "challenge_rate": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "challenges_filed / total_active_signals"
        },
        "avg_resolution_time_hours": {
          "type": ["number", "null"],
          "minimum": 0.0,
          "description": "Mean hours from challenge to resolution"
        },
        "challenge_success_rate": {
          "type": ["number", "null"],
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "resolved_invalid / (resolved_valid + resolved_invalid)"
        },
        "admin_resolution_timeout_rate": {
          "type": ["number", "null"],
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "auto_escalated / total_challenges"
        }
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
