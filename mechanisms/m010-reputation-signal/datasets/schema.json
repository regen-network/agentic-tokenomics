{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "m010 replay dataset",
  "type": "object",
  "required": [
    "mechanism_id",
    "scope",
    "as_of",
    "events"
  ],
  "properties": {
    "mechanism_id": {
      "const": "m010"
    },
    "scope": {
      "type": "string"
    },
    "as_of": {
      "type": "string",
      "description": "ISO-8601 datetime"
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "timestamp",
          "subject_type",
          "subject_id",
          "category",
          "endorsement_level",
          "signaler_id",
          "evidence"
        ],
        "properties": {
          "timestamp": {
            "type": "string"
          },
          "subject_type": {
            "enum": [
              "CreditClass",
              "Project",
              "Verifier",
              "Methodology",
              "Address"
            ]
          },
          "subject_id": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "endorsement_level": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "signaler_id": {
            "type": "string"
          },
          "evidence": {
            "type": "object",
            "required": [
              "koi_links",
              "ledger_refs"
            ],
            "properties": {
              "koi_links": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "ledger_refs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
